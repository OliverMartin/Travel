<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}VistaTravel Application{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="">
    <meta name="author" content="">

    {% block stylesheets %}        
        <link href="{{ asset('css/jquery-ui.min.css') }}" type="text/css" rel="stylesheet">
        <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}"  rel="stylesheet" />
    {% endblock %}
</head>
<body>

    {% block body %}
    <div class="container">
        {% block header %}
            <div class="header">
                <ul class="nav nav-pills pull-right">               
                    <li>
                        {% block headerright %}

                        {% endblock %}
                    </li>
                </ul>
                <p><img onerror="this.onerror=null; this.src=='{{ asset('images/logo/logo.png') }}'" src="{{ asset('images/logo/logo.svg') }}" ></p>
            </div>
        {% endblock %}
        <div class="content">
            {% block content %}

            {% endblock %}
        </div>        
    </div>
    {% endblock %}

    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
</body>
</html>